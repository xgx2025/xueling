<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hope.xueling.english.mapper.MaterialMapper">

    <!-- 根据材料ID和章节ID获取章节内容 如果有章节ID,则在章节表中根据章节ID查找内容，否则根据材料ID在文章表中查找内容 -->
    <select id="getChapterContent" resultType="com.hope.xueling.english.domain.dto.MaterialContentDTO">
        <if test="chapterId != null">
            select content from chapter where id = #{chapterId}
        </if>
        <if test="chapterId == null">
            select content from article where material_id = #{materialId}
        </if>
    </select>
</mapper>