<configuration>
    <!-- 日志路径和文件名属性 -->
    <property name="LOG_PATH" value="logs/" />
    <property name="LOG_FILE_NAME" value="xueling" />

    <!-- 1. 滚动文件 Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}${LOG_FILE_NAME}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}${LOG_FILE_NAME}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 2. 控制台 Appender（生产环境可优化级别或删除） -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level> <!-- 只输出 高于等于level 到控制台 -->
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 3. 异步 Appender（不丢弃日志） -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>8192</queueSize>
        <neverBlock>false</neverBlock> <!-- 队列满时阻塞，确保日志不丢失 -->
        <discardingThreshold>0</discardingThreshold> <!-- 不丢弃任何级别日志 -->
        <appender-ref ref="FILE"/>
    </appender>

    <!-- 4. 根日志级别和输出目标 -->
    <root level="INFO">
        <appender-ref ref="ASYNC_FILE"/> <!-- 异步写入文件 -->
        <appender-ref ref="CONSOLE"/> <!-- 控制台输出（生产环境可注释） -->
    </root>
</configuration>